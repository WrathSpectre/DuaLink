            android:layout_columnWeight="1"
            android:text="h"
            android:padding="0dp"/>

        <Button
            android:id="@+id/j"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="j"
            android:padding="0dp"/>

        <Button
            android:id="@+id/k"
