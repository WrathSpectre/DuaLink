            android:text="V" />

        <Button
            android:id="@+id/b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:text="B" />

        <Button
            android:id="@+id/n"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:text="N" />

        <Button
